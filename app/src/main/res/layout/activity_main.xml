<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    tools:context="com.cookandroid.weatherfashion.MainActivity">

    <Button
        android:textSize="25dp"
        android:id="@+id/button1"
        android:background="#B7F0B1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="오늘의 날씨 확인하러 가기">
    </Button>

    <Button
    android:id="@+id/button2"
    android:layout_width="match_parent"
        android:background="#B2EBF4"
    android:layout_height="wrap_content"
    android:text="5도 이하"/>
    <Button
        android:id="@+id/button3"
        android:background="#6799FF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5도~9도"/>
    <Button
        android:id="@+id/button4"
        android:background="#F2CB61"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10도~16도"/>
    <Button
        android:id="@+id/button5"
        android:background="#F29661"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="17도~22도"/>
    <Button
        android:id="@+id/button6"
        android:background="#F15F5F"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="23도~26도"/>
    <Button
        android:id="@+id/button7"
        android:background="#FF0000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="27도 이상"/>
</LinearLayout>
